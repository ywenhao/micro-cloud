{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/**/*", "src/**/*.vue", "./typings/*.d.ts", "packages"],
  "exclude": [
    "src/**/__tests__/*",
    "src/**/vite.config.*",
    "packages/**/node_modules/*",
    "packages/**/vite.config.*",
    "packages/apis/scripts/*"
  ],
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"],
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
